{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Ampa list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Mail</th>
                <th>Logo</th>
                <th>Public URL</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('ampa_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.phone }}</td>
                <td>{{ entity.mail }}</td>
                <td>{{ entity.logo }}</td>
                <td><a href="{{ url('ampa_show_slug', {'slug': entity.slug}) }}">
{{ url('ampa_show_slug', {'slug': entity.slug}) }}
</a></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('ampa_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ampa_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('ampa_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
