{% extends '::base.html.twig' %}

{% block body -%}
    <h1>ItemMessage list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('item_message_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.message }}</td>
                <td>{% if entity.date %}{{ entity.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('item_message_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('item_message_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('item_message_new', { 'slug' : app.request.get('slug'),'item_id' : app.request.get('item_id') })}}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
